@{
    ViewData["Title"] = "Sala 1 - Hufflepuff";
}

<div class="sala-hufflepuff">
    <h2>Hufflepuff</h2>
    <div class="row mt-4">
        <div class="col-12">
            <p class="pista-libro">El conocimiento puede abrir puertas… si sabés cuál consultar.</p>
            <p>El coraje no es no tener miedo... es entrar igual.</p>
            <a href='@Url.Action("SalaMemotest")' class="hufflepuff-link" id="hufflepuff-link"></a>
        </div>
    </div>
</div>

<audio id="audio-victory" src="/audio/victory.mp3"></audio>

<script>
document.getElementById('hufflepuff-link').addEventListener('click', function() {
    const audio = document.getElementById('audio-victory');
    if(audio) { 
        audio.currentTime = 0; 
        audio.play().catch(e => console.log('Audio no pudo reproducirse:', e));
    }
});
</script>