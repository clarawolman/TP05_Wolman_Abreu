@{
    ViewData["Title"] = "Sala 1 - Ravenclaw";
}

<div class="sala-ravenclaw">
    <h2>Ravenclaw</h2>
    <div class="row mt-4">
        <div class="col-12">
            <p class="pista-libro">El conocimiento puede abrir puertas… si sabés cuál consultar.</p>
            <p>Solo la lógica te guía al final</p>
            <a href='@Url.Action("SalaMemotest")' class="ravenclaw-link" id="ravenclaw-link"></a>
        </div>
    </div>
</div>

<audio id="audio-victory" src="/audio/victory.mp3"></audio>

<script>
document.getElementById('ravenclaw-link').addEventListener('click', function() {
    const audio = document.getElementById('audio-victory');
    if(audio) { 
        audio.currentTime = 0; 
        audio.play().catch(e => console.log('Audio no pudo reproducirse:', e));
    }
});
</script>
