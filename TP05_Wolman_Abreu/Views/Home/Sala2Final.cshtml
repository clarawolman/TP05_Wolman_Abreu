@{
    ViewData["Title"] = "Sala 2 - Final";
}

<video autoplay loop muted playsinline id="bg-video" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; min-width: 100vw; min-height: 100vh; width: 100vw; height: 100vh; z-index: -1; object-fit: cover;">
    <source src="/video/aceptacionCaliz.mp4" type="video/mp4">
</video>


<div class="sala2-final">
    <h2 class="titulo-grande scale-hover">¡Felicidades!</h2>
    <p class="texto-grande scale-hover">Has superado el desafío del Cáliz de Fuego.</p>
    <form method="post" asp-action="Sala3" class="form-boton-final">
        <button type="submit" class="btn-transicion-blur btn-chico">
            Continuar al Desafío siguiente
        </button>
    </form>
</div>

<audio id="audio-victory" src="/audio/victory.mp3"></audio>

<script>
window.addEventListener('load', function() {
    const audio = document.getElementById('audio-victory');
    if (audio) {
        audio.currentTime = 0;
        audio.play().catch(e => console.log('Audio no pudo reproducirse:', e));
    }
});

document.querySelector('.btn-transicion-blur').addEventListener('click', function() {
    const audio = document.getElementById('audio-victory');
    if(audio) { 
        audio.currentTime = 0; 
        audio.play().catch(e => console.log('Audio no pudo reproducirse:', e));
    }
});
</script>

