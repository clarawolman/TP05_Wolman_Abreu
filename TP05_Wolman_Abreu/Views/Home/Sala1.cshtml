@{
    ViewData["Title"] = "Sala 1 - Memotest";
}
<h2>Sala 1 - Memotest</h2>
<p>Hacé clic en la carta para activar el juego.</p>
<img src="/img/carta.jpg" style="width:100px;" onclick="mostrarMemotest()" />

<div id="memotest" style="display:none;">
    <p>Emparejá las cartas relacionadas con Hogwarts.</p>
    <!-- Simulamos un memotest con botones -->
    <form method="post">
        <button name="respuesta" value="correcta">Resolver Memotest</button>
    </form>
</div>

<script>
function mostrarMemotest() {
    document.getElementById("memotest").style.display = "block";
}
</script>