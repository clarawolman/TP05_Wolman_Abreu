@{
    ViewData["Title"] = "Sala 3 - Dragón";
}
<link rel="stylesheet" href="/css/sala3.css" />
<h2>Sala 3 - Dragón</h2>
<p>Avanzá hacia el huevo dorado sin pisar baldosas ruidosas.</p>
<div id="sala3-container">
    <img id="img-sala3" src="/images/sala3_baldosas.jpg" alt="Sala 3" />
    <!-- Las baldosas se superponen con botones invisibles -->
    <div class="baldosa" data-x="0" data-y="3"></div>
    <div class="baldosa" data-x="1" data-y="3"></div>
    <div class="baldosa" data-x="2" data-y="3"></div>
    <div class="baldosa" data-x="3" data-y="3"></div>
    <div class="baldosa" data-x="4" data-y="3"></div>
    <div class="baldosa" data-x="4" data-y="2"></div>
    <div class="baldosa" data-x="4" data-y="1"></div>
    <div class="baldosa" data-x="4" data-y="0" id="huevo"></div>
</div>
<audio id="audio-dragon" src="/audio/dragon_roar.mp3"></audio>
<audio id="audio-paso" src="/audio/paso_alfombra.mp3"></audio>
<script src="/js/sala3.js"></script>
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">@ViewBag.Mensaje</div>
}
<div style="text-align:center; margin-top:30px;">
    <a href="/Home/Sala4" class="btn btn-primary">Ir a Sala 4 (prueba)</a>
</div>